{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "airbnb",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "warn",
    // FIXME: resolver os problemas para excluir essas regras
    "no-underscore-dangle": "warn",
    "max-len": "warn",
    "class-methods-use-this": "warn",
    "no-cond-assign": "warn"
  }
}
